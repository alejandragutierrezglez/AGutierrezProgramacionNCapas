@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Bienvenidos</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h7>Seleccione la acción a realizar</h7>
            <hr />
        </div>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">Id Usuario</td>
            <td>Nombre</td>
            <td>Email</td>
            <td>UserName</td>
            <td>Passwordd</td>
            <td>Fecha Nacimiento</td>
            <td>Id Rol</td>
            <td>Nombre Rol</td>
            <td>Sexo</td>
            <td>Telefono</td>
            <td>Celular</td>
            <td>CURP</td>
            <td>Imagen</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Usuario usuario in Model.Usuarios)
        {

            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon glyphicon-pencil" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"><i class="bi bi-pencil-square" style="color:ivory"></i></a></td>
                <td style="display :none;">@usuario.IdUsuario </td>
                <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                @*<td>@usuario.ApellidoPaterno</td>
        <td>@usuario.ApellidoMaterno</td>*@
                <td>@usuario.Email</td>
                <td>@usuario.UserName</td>
                <td>@usuario.Passwordd</td>
                <td>@usuario.FechaNacimiento</td>
                <td>@usuario.Rol.IdRol </td>
                <td>@usuario.Rol.Nombre</td>
                <td>@usuario.Sexo</td>
                <td>@usuario.Telefono</td>
                <td>@usuario.Celular</td>
                <td>@usuario.CURP</td>
                <td>

                    @if (usuario.Imagen != null)
                    {

                        <img id="Img" src="data:image/*;base64,@usuario.Imagen" style="width:250px ; height:250px" />

                    }
                    else
                    {
                        <img id="Img" src="~/Imagenes/SinImagen.png" style="width:250px ; height:250px" />
                    }

                </td>


                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-remove" href="@Url.Action("Delete", "Usuario", new { IdUsuario= usuario.IdUsuario})" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
        }
    </tbody>
</table>
